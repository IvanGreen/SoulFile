<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollBar?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="mainVBox" prefHeight="600" prefWidth="1200" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.MainWindow">
    <MenuBar>
        <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" text="Close" />
        </Menu>
        <Menu mnemonicParsing="false" text="Edit">
            <MenuItem mnemonicParsing="false" text="Delete" />
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
            <MenuItem mnemonicParsing="false" text="About" />
        </Menu>
    </MenuBar>
   <BorderPane prefHeight="578.0" prefWidth="1200.0">
      <bottom>
          <HBox prefHeight="120.0" prefWidth="1200.0" BorderPane.alignment="CENTER">
              <VBox prefHeight="0.0" prefWidth="1200.0">
                  <HBox prefHeight="100.0" prefWidth="200.0">
                      <TextArea fx:id="chatLog" HBox.hgrow="ALWAYS" />
                      <ScrollBar orientation="VERTICAL" />
                  </HBox>
                  <HBox>
                    <TextField promptText="Type message..." HBox.hgrow="ALWAYS" />
                    <Button alignment="BOTTOM_RIGHT" text="Send" />
                  </HBox>
              </VBox>
          </HBox>
      </bottom>
      <right>
         <VBox prefWidth="120.0" BorderPane.alignment="CENTER" VBox.vgrow="ALWAYS">
               <TextArea editable="false" prefHeight="15" text="Online Users:" />
               <HBox>
                     <ListView fx:id="onlineUsers" prefHeight="425.0" prefWidth="106.0" VBox.vgrow="ALWAYS" />
                      <ScrollBar orientation="VERTICAL" />
               </HBox>
         </VBox>
      </right>
      <center>
          <SplitPane dividerPositions="0.5" orientation="VERTICAL" BorderPane.alignment="CENTER">
              <VBox>
                  <HBox>
                      <TextArea editable="false" style="-fx-font-weight: bold" text="Local Files" HBox.hgrow="ALWAYS" />
                      <Button alignment="BASELINE_RIGHT" prefHeight="50.0" prefWidth="75.0" onAction="#pressOnLocalUpdateBtn" text="Upload" />
                      <Button alignment="BASELINE_RIGHT" prefHeight="50.0" prefWidth="55.0" onAction="#pressOnLocalDeleteBtn" text="Delete" />
                      <Button alignment="BASELINE_RIGHT" prefHeight="50.0" prefWidth="55.0" onAction="#refreshLocalFilesList" text="Update" />
                  </HBox>
                  <HBox VBox.vgrow="ALWAYS">
                      <ListView fx:id="localFiles" HBox.hgrow="ALWAYS" />
                      <ScrollBar orientation="VERTICAL" />
                  </HBox>
              </VBox>
              <VBox>
                 <HBox>
                     <TextArea editable="false" prefWidth="20.0" style="-fx-font-weight: bold" text="Soul Files" HBox.hgrow="ALWAYS" />
                     <Button alignment="BASELINE_RIGHT" prefHeight="50.0" prefWidth="75.0" onAction="#pressOnSoulDownloadBtn" text="Download" />
                     <Button alignment="BASELINE_RIGHT" prefHeight="50.0" prefWidth="55.0" onAction="#pressOnSoulDeleteBtn" text="Delete" />
                     <Button alignment="BASELINE_RIGHT" prefHeight="50.0" prefWidth="55.0" onAction="#refreshSoulFilesList" text="Update" />
                 </HBox>
                  <HBox VBox.vgrow="ALWAYS">
                      <ListView fx:id="soulFiles" HBox.hgrow="ALWAYS" />
                      <ScrollBar orientation="VERTICAL" />
                  </HBox>
              </VBox>
          </SplitPane>
      </center></BorderPane>
</VBox>
